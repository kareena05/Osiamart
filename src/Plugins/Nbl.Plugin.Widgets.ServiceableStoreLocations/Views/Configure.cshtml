@model Nbl.Plugin.Widgets.ServiceableStoreLocations.Models.StorePincodeMappingListModel

@{
    Layout = "_ConfigurePlugin";
}

<h2>Manage Store Pincodes</h2>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModal">Add New</button>

<table class="table">
    <thead>
        <tr>
            <th>Store Name</th>
            <th>StoreId</th>
            <th>Pincodes</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.StorePincodeMappings)
        {
            <tr>
                <td>@item.StoreName</td>
                <td>@item.StoreId</td>
                <td>@item.Pincode</td>
                <td><input type="checkbox" disabled @(item.Status ? "checked" : "") /></td>
                <td>
                    <a href="@Url.Action("EditStorePincode", new { id = item.Id })" class="btn btn-secondary">Edit</a>
                    <form method="post" asp-action="DeleteStorePincode" asp-route-id="@item.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Add Modal -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">Add Store Pincode</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="AddStorePincode">
                    <div class="form-group">
                        <label for="StoreId">Store</label>
                        <select id="StoreId" name="StoreId" class="form-control">
                            @foreach (var store in Model.AvailableStores)
                            {
                                <option value="@store.Value">@store.Text</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="Pincode">Pincode</label>
                        <input type="text" id="Pincode" name="Pincode" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="Status">Status</label>
                        <input type="checkbox" id="Status" name="Status" />
                    </div>
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
        </div>
    </div>
</div>
